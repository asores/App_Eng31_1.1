<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/darker_gray"
    tools:context="com.app.locksala1.app_eng31_11.MyActivity_home">


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/usr"
        android:hint="Usuario"
        android:layout_above="@+id/psw"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="51dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/psw"
        android:layout_above="@+id/previus"
        android:hint="Senha"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="49dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:id="@+id/previus"
        android:onClick="clickSubmit"
        android:background="@drawable/a"
        android:textSize="12dp"

        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/psw"
        android:layout_alignEnd="@+id/psw"
        android:layout_marginBottom="180dp"
        android:height="9dp"/>


</RelativeLayout>
